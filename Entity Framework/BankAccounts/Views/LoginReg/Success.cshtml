@{
    ViewData["Title"] = "Home Page";
}
@model Transactions
<div class="text-center">
    <h1 class="display-4">Welcome, @ViewBag.thisUser.FirstName</h1>
    <h6 class = "float-right">Current Balance: @ViewBag.thisUser.Balance  </h6>
    
</div>

<a class = "btn btn-primary"asp-controller="home" asp-action="logout"> Logout </a>

<form asp-action="transactions" asp-controller="LoginReg">
          
  <div class="form-group">
    <label asp-for="Amount">Withdraw/Deposit</label>
    <input class="form-control" asp-for="Amount">

     <button class="btn btn-primary" type="submit">Submit</button>

</form>


<table class="table">
  <thead>
        <tr>
            <th scope="col">Transactions Amount </th>
            <th scope="col">Date-Time</th>
        </tr>
  </thead>
  <tbody>
    @foreach(var x in ViewBag.thisUser.Transactions)
    {
        <tr>
            <th scope="row">@x.Amount</th>
            <td>@x.CreatedAt</td>
        </tr>
    }
  </tbody>
</table>