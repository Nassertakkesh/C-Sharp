@{
    ViewData["Title"] = "Home Page";
}
@model Dish

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<form asp-controller="Dish" asp-action="Creating">
<div class = "row">
<div class = "col-4">

    <div class="form-group">
     
        <label asp-for="ChefId">Chef's Name</label>
        <select class="form-control" asp-for="ChefId" >

         @foreach (Chefs currentChef in ViewBag.allchefs)
            {
                <option value = "@currentChef.ChefId">@currentChef.FirstName</option>
            }
            </select>
    </div>

    <div class="form-group">
        <label asp-for="DishName">Dish's Name</label>
        <input type="text" asp-for="DishName" class="form-control" id="DishName" >
    </div>

    <div class="form-group">
        <label asp-for="Calories"># of Calories</label>
        <input type="text" asp-for="Calories" class="form-control" id="Calories" >
  </div>


</div>

<div class = "col-4 form-group">
    <label asp-for="Tastiness">Tastiness</label>
    <select class="form-control" asp-for="Tastiness" id="exampleFormControlSelect1">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
    </div>

<div class = "col-4 form-group">
    <label asp-for="Description">Description: </label>
    <textarea class="form-control" id="exampleFormControlTextarea1" asp-for="Description" rows="3"></textarea>
    </div>

</div>

  <button type="submit" class="btn btn-primary">Submit</button>

</form>


