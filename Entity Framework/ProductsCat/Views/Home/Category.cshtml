
@{
    ViewData["Title"] = "Home Page";
}

@model Product
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div class = "text-center">
<a class = "display-4" asp-controller="Home" asp-action="Product" >
          Product 
        </a>
<h4 class = "display-4 d-inline">| </h4>
<a class = "display-4" asp-controller="Home" asp-action="Category" >
          Category
        </a>
</div>
<div class ="row">

<div class ="col-6">

<form asp-action="CreateCat" asp-controller="Home">
          
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name">
    </div>
        <button class="btn btn-primary" type="submit">Submit</button>
</form>

</div>
<div class ="col-6">

<table class="table">

  <thead>
    <tr>
        <th scope="col"> Category</th>
    </tr>
  </thead>
  <tbody>

@foreach(var x in ViewBag.allCat)
{
    <tr>
      <td>   <a asp-controller="Home" asp-action="CategoryDetails" asp-route-id="@x.CategoryId">
        @x.Name </a>   </td>
    </tr>
}
  </tbody>
</table>
</div>
</div>
